<Page x:Class="EtalonFM.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:EtalonFM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Меню" FontSize="20" FontWeight="DemiBold"  Margin="0 0 0 10"/>
            <TextBlock x:Name="TbName" Margin="0 0 0 5"/>
            <Button Content="Клиенты" Name="BtnClient" Click="BtnClient_Click" Style="{DynamicResource MaterialDesignPaperButton}" Margin="0 5 0 5"/>
            <Button Content="Заказы" Name="BtnOrder" Click="BtnOrder_Click" Style="{DynamicResource MaterialDesignPaperButton}" Margin="0 5 0 5"/>
            <Button Content="Типы баннеров" Name="BtnType" Click="BtnType_Click" Style="{DynamicResource MaterialDesignPaperButton}" Margin="0 5 0 5"/>
            <Button Content="Пользователи" Name="BtnUser" Click="BtnUser_Click" Style="{DynamicResource MaterialDesignPaperButton}" Margin="0 5 0 5"/>
        </StackPanel>
    </Grid>
</Page>
