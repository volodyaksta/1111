<Page x:Class="EtalonFM.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:EtalonFM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <StackPanel Width="250" VerticalAlignment="Center">
            <TextBlock FontSize="20" Text="Регистрация"/>
            <TextBox Name="LoginBox" md:HintAssist.Hint="Логин" md:HintAssist.IsFloating="True" HorizontalContentAlignment="Center"/>
            <PasswordBox Name="PasswordBox" md:HintAssist.Hint="Пароль" md:HintAssist.IsFloating="True" HorizontalContentAlignment="Center"/>
            <Button Click="BtnReg" Content="ЗАРЕГИСТРИРОВАТЬСЯ" Margin="0, 15" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Page>
